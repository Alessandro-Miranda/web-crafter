{
  "name": "web-crafter",
  "version": "1.0.0",
  "description": "Project created to clone website structures",
  "keywords": [
    "crafter",
    "web crafter",
    "web scraping"
  ],
  "author": "Alessandro Miranda",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "webcrafter": "./dist/index.js"
  },
  "scripts": {
    "dev": "ts-node ./src/index.ts --site-name=temp-test --template-url=https://pellegrintransporte.com.br/",
    "build": "tsc && echo #!/usr/bin/env node | cat - dist/index.js > temp && mv temp dist/index.js",
    "lint": "eslint \"./src/**/*.{ts,js}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "jsdom": "^25.0.1"
  }
}
